@page
@model BookStore.Pages.CartModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<h3> Cart </h3>

<form method="post" asp-page="cart">

    <table class="table">
        <tr>
            <th>Action</th>
            <th>Title</th>
            <th>Author</th>
            <th>Catogry</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantitiy</th>
            <th>Subtotal</th>
        </tr>
        <tbody>
            @foreach (var item in Model.cart)
            {
            <tr align="center">
                <td align="center">
                    <a asp-page="cart" asp-page-handler="delete" asp-route-id="@item.Product.ID">X</a>
                </td>

                <td>@item.Product.Title</td>
                <td>@item.Product.Author</td>
                <td>@item.Product.Category</td>

                <td>
                    <img src="~/Images/@Html.DisplayFor(modelItem => item.Product.photo)" width="120" heigh="80" />
                </td>

                <td>SAR @item.Product.Price</td>

                <td><input type="number" name="quantities" value="@item.Quantity" min="1" style="width: 50px;" />
                <input type="submit" value="Update" asp-page-handler="update" asp-route-id="@item.Product.ID"></td>

                <td>
                    SAR @(item.Product.Price * item.Quantity)
                </td>
            </tr>
            }

            <tr>
                <td colspan="7" align="right">Total</td>
                <td align="center">SAR @Model.Total</td>
            </tr>
        </tbody>
    </table>

</form>
<a asp-page="Shopping">Continue Shopping</a>
<br />
<a asp-page="WelcomeUser" asp-page-handler="Logout">Logout</a>